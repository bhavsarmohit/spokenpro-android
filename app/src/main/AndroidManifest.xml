        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpokenPro">
        <activity
            android:name=".forgotPassword"
            android:exported="true" />
